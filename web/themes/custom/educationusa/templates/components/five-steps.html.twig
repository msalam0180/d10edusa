<div class="mt-4">
  <div class="row justify-content-center">
    {% for row in rows %}
      <div class="col-2 card-container">
        <div class="card-and-indicator">
          <a href="{{ row.content['#row']._entity.field_step_link.0.url }}" class="card-link">
            <div class="card my-2">
              <div class="card-content">
                <h5 class="card-title">{{ row.content['#row']._entity.field_five_steps.entity.label }}</h5>
              </div>
            </div>
          </a>
        </div>
        <div class="indicator-line" style="background-color: {{ row.content['#row']._entity.field_color_selection.value }}"></div>
        <div class="card-text-container">
          <p class="mt-3 card-text">{{ row.content['#row']._entity.body.0.value|striptags }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% if content.field_hero.0 is not empty %}
    {% set image_uri = content.field_hero.0['#item'].entity.uri.value %}
    {% set image_source = file_url(image_uri) %}
    <div{{ attributes.addClass(classes) }} style="margin-bottom: 0;">
        <div class="position-relative">
            <img class="img-fluid" src="{{ image_source }}" alt="{{ hero_image_alt }}">

            {% if hero_overlay_text %}
                <div class="hero-text w-100" style="top: 50%; transform: translateY(-50%);">
                    <div class="container h-100">
                        <div class="row h-100 justify-content-center align-items-center">
                            <div class="col-12 col-md-8 text-center">
                                <h1 class="h1-responsiv display-4 display-md-3 display-lg-2"><strong>{{ hero_overlay_text }}</strong></h1>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}
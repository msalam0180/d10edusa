{% import '@cl_bootstrap_ui_kit/templates/ui-kit/buttons-links/buttons-links.macros.twig' as macros %}

{% extends '@bootstrap_ui_kit/ui-kit/buttons-links/buttons-links.html.twig' %}

{% block section_intro %}
  <p>{{ 'This type scale is a range of contrasting styles that support the needs of the product and its content.'|t }}</p>
{% endblock %}

{% block section_content %}
  <div class="border-bottom pb-5 mt-5">
    <div class="row row-cols-lg-4 gy-5">
      {{ macros.button_set('Primary') }}
      {{ macros.button_set('Secondary') }}
      {{ macros.button_set('Dark') }}
      {{ macros.button_set('Light') }}
    </div>
  </div>
  <div class="border-bottom py-5 my-5">
    <div class="row row-cols-lg-4 gy-5">
      {{ macros.button_set('Primary', true) }}
      {{ macros.button_set('Secondary', true) }}
      {{ macros.button_set('Dark', true) }}
      {{ macros.button_set('Light', true) }}
    </div>
  </div>
  <h3 class="d-block mb-4">{{ 'Links'|t }}</h3>
  <div>
    <div class="row row-cols-lg-4 gy-5">
      {{ macros.link_set('Primary') }}
      {{ macros.link_set('Secondary') }}
      {{ macros.link_set('Dark') }}
      {{ macros.link_set('Light') }}
    </div>
  </div>
{% endblock %}

{% block section_modal %}
  {%
    set tabs = {
    'twig': {},
    'php': {},
    'storybook': {
      'title': 'Stories',
      'hilightLang': 'php',
      'files': {
        'Buttons': components_path ~ '/button/button.stories.yml',
        'Links': components_path ~ '/link/link.stories.yml',
      },
    },
  }
  %}
  {{ parent() }}
{% endblock %}
